# ========================================
# FinanceFlow Environment Variables
# ========================================
# Copy this file to .env.local and fill in your values
# Run: cp .env.example .env.local

# ========================================
# DATABASE
# ========================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
# 
# Local development:
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/financeflow?schema=public"
#
# Production (Supabase example):
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.xxx.supabase.co:5432/postgres?schema=public"

# ========================================
# NEXTAUTH.JS (Authentication)
# ========================================
# Base URL of your application
NEXTAUTH_URL="http://localhost:3000"

# Secret key for JWT encryption
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=""

# ========================================
# GOOGLE GEMINI AI (Required for AI features)
# ========================================
# Get your API key from: https://aistudio.google.com/app/apikey
# Free tier: 60 requests per minute
GEMINI_API_KEY=""

# ========================================
# GOOGLE CLOUD VISION API (Optional - for receipt OCR)
# ========================================
# Get API key from: https://console.cloud.google.com/
# Enable Cloud Vision API in your project
# Free tier: 1,000 requests/month for OCR
# Note: Can use same project as Gemini API
GOOGLE_CLOUD_API_KEY=""

# ========================================
# GOOGLE OAUTH (Optional)
# ========================================
# Only needed for Google Sign-In
# Get from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# ========================================
# STRIPE (Optional - for monetization)
# ========================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Stripe Price IDs for subscription tiers
STRIPE_PRICE_BASIC=""
STRIPE_PRICE_PREMIUM=""
STRIPE_PRICE_ENTERPRISE=""

# ========================================
# RESEND (Optional - for email notifications)
# ========================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY=""
RESEND_FROM_EMAIL="noreply@financeflow.app"

# ========================================
# CURRENCY EXCHANGE RATES API (Optional)
# ========================================
# Get from: https://fixer.io/
FIXER_API_KEY=""

# ========================================
# PLAID (Optional - for bank integration)
# ========================================
# Get from: https://dashboard.plaid.com/
PLAID_CLIENT_ID=""
PLAID_SECRET=""
PLAID_ENV="sandbox" # sandbox | development | production

# ========================================
# VERCEL KV / REDIS (Optional - for caching)
# ========================================
# Auto-populated by Vercel if using Vercel KV
KV_URL=""
KV_REST_API_URL=""
KV_REST_API_TOKEN=""
KV_REST_API_READ_ONLY_TOKEN=""

# ========================================
# AI CONFIGURATION (Optional)
# ========================================
AI_MODEL_VERSION="gemini-1.5-flash"
AI_TEMPERATURE="0.7"
AI_MAX_TOKENS="2048"
AI_AUTO_ACCEPT_THRESHOLD="0"

# ========================================
# RUNTIME
# ========================================
NODE_ENV="development"
