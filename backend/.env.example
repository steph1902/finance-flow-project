# Application
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/finance_flow?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRATION=7d

# Redis (for caching and queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Email (Resend)
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=noreply@financeflow.com

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_BASIC_PRICE_ID=price_...
STRIPE_PREMIUM_PRICE_ID=price_...

# Plaid
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox

# Google AI (Gemini)
GOOGLE_AI_API_KEY=your-google-ai-key

# Google Cloud Vision (OCR)
GOOGLE_CLOUD_VISION_API_KEY=your-vision-api-key

# Currency API (fixer.io or exchangerate-api.com)
CURRENCY_API_KEY=your-currency-api-key
CURRENCY_API_URL=https://api.exchangerate-api.com/v4/latest

# Cron Jobs
CRON_SECRET=your-cron-secret-for-securing-endpoints

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# CORS
CORS_ORIGIN=http://localhost:3000

# Sentry (Error Tracking - Optional)
SENTRY_DSN=
